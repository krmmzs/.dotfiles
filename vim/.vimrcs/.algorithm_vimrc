let mapleader = ","

set timeout           " for mappings
set timeoutlen=1000   " default value
set ttimeout          " for key codes
set ttimeoutlen=10    " unnoticeable small value

set nocompatible

set enc=utf-8

set backspace=indent,eol,start

set nobackup
set writebackup

set history=100

"在状态栏显示正在输入的命令
"设置使用 c/c++ 语言的自动缩进方式
set cindent
set autoindent
set smartindent
set shiftwidth=4

" tab是4个空格
set ts=4
set expandtab

"设置在左侧显示行号和相对行号
set nu
set relativenumber

"语法高亮
syntax enable
syntax on

"高亮行和列
set cursorline
highlight CursorLine   cterm=NONE ctermbg=white ctermfg=NONE guibg=NONE guifg=NONE

"srarch
set incsearch
set hlsearch

" 启用鼠标
set mouse=a

inoremap {<CR> {<CR>}<ESC>O


"""""""""""""""""""""""""""""""""""""
" not
inoremap <Leader>p <ESC>"+p
vnoremap <Leader>y "+y
